<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="init">

  <rule id="init" scope="public">
    <one-of>
      <item>
	I want to go from <ruleref uri="#askFrom"/> to <ruleref uri="#askTo"/>
	<tag>out.departure = rules.askFrom; out.destination = rules.askTo; </tag>
      </item>
      <item>
	I want to go from <ruleref uri="#askFrom"/> on <ruleref uri="#askDate"/>
	<tag>out.departure = rules.askFrom; out.date = rules.askDate; </tag>
      </item>
      <item>
	I want to leave on <ruleref uri="#askDate"/> until <ruleref uri="#askReturn"/>
	<tag>out.date = rules.askDate; out.returning = rules.askReturn; </tag>
      </item>
      <item>
	I want to go from <ruleref uri="#askFrom"/> to <ruleref uri="#askTo"/> on <ruleref uri="#askDate"/> returning on <ruleref uri="#askReturn"/> 
	<tag>out.departure = rules.askFrom; out.destination = rules.askTo; out.date = rules.askDate; out.returning = rules.askReturn; </tag>
      </item>
      <item>
	I want to go from <ruleref uri="#askFrom"/> with a <ruleref uri="#askFood"/> meal
	<tag>out.departure = rules.askFrom; out.meal = rules.askFood; </tag>
      </item>
    </one-of>
  </rule>

  <rule id="choosePlace">
    <one-of>
      <item>earth<tag>out="earth";</tag></item>
      <item>venus<tag>out="venus";</tag></item>
      <item>mars<tag>out="mars";</tag></item>
      <item>london<tag>out="london";</tag></item>
      <item>paris<tag>out="paris";</tag></item>
      <item>new york<tag>out="new york";</tag></item>
    </one-of>
  </rule>

  <rule id="chooseDate">
    <one-of>
      <item>Monday<tag>out="monday";</tag></item>
      <item>Tuesday<tag>out="tuesday";</tag></item>
      <item>Wednesday<tag>out="wednesday";</tag></item>
      <item>Thursday<tag>out="thursday";</tag></item>
      <item>Friday<tag>out="friday";</tag></item>
      <item>Saturday<tag>out="saturday";</tag></item>
      <item>Sunday<tag>out="sunday";</tag></item>
    </one-of>
  </rule>

  <rule id="foodMenu">
    <one-of>
      <item>Chicken<tag>out="chicken";</tag></item>
      <item>Fish<tag>out="fish";</tag></item>
      <item>Vegetarian<tag>out="vegetarian";</tag></item>
    </one-of>
  </rule>

</grammar>
